@using Gms.Domain
@model Gms.Domain.GlassStore

@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}

<body>

    <div id="toolbar" style="padding: 5px; height: auto">
        <div>
            玻璃品种：
            @Html.DropDownListForCommonCode(c=>c.GlassType,CommonCodeType.玻璃品种,"GlassTypeId","全部")

            厚度：
            @Html.DropDownListForEnum(c=>c.Thickness,"全部",null)
            
            数量：<input name="Quantity.Start" class="messager-input" style="width: 80px" />
            至<input name="Quantity.End" class="messager-input" style="width: 80px" />
            <a href="#" id="glassstore_search" class="easyui-linkbutton search" iconcls="icon-search">搜索</a>
        </div>
    </div>
     
    <table id="glassstore_search_list" url="@Url.Action("StoreList","GlassStore")" >
            
    </table>
    
    @*记录选择的库存，便于其他页面调用*@
    <div style="display: none;">
        <input id="glassstore_selected_id" />
        <input id="glassstore_selected_type" />
        <input id="glassstore_selected_thickness" />
        <input id="glassstore_selected_longedge" />
        <input id="glassstore_selected_shortedge" />
        <input id="glassstore_selected_amount" />
    </div>
        
        
</body>
<script type="text/javascript" src="@Url.Content("/Scripts/GlassStore/GlassStore.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GlassStore.StoreInit();
    });

</script>