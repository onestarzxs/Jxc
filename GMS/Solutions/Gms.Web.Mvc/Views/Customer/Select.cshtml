@using Gms.Domain

@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}

<body>

    <div id="toolbar" style="padding: 5px; height: auto">
        <div>
            姓名：<input name="Name" class="messager-input" style="width: 80px" />
            电话：<input name="Mobile" class="messager-input" style="width: 80px" />
            公司：<input name="Company" class="messager-input" style="width: 80px" />
            <a href="#" id="customer_search" class="easyui-linkbutton search" iconcls="icon-search">搜索</a>
        </div>
    </div>
     
    <table id="customer_search_list" url="@Url.Action("List","Customer")" del="@Url.Action("Delete","Customer")">
            
    </table>
        
    <div id="customer_search_edit" dlgtitle="客户信息" style="display: none">
@*        @{
            Html.RenderPartial("Edit",new Customer());
        }*@
    </div>
    
    @*记录选择的客户，便于其他页面调用*@
    <div style="display: none;">
        <input id="customer_selected_id" />
        <input id="customer_selected_name" />
        <input id="customer_selected_mobile" />
        <input id="customer_selected_company" />
        <input id="customer_selected_note" />
    </div>
       
        
</body>
<script type="text/javascript" src="@Url.Content("/Scripts/customer/Customer.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Customer.Init();
    });
    
</script>

