@model SecurityGuard.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SecurityGuardLayoutPage.cshtml";
}
<h2>
    管理角色、用户</h2>
<p>
    An easy-to-use management system for Membership Users and Roles based on the ASP.NET
    Membership system.</p>
<div class="fl w48pc mr20">
    <fieldset>
        <legend>Manage Users</legend>
        <p>@Html.ActionLink("用户管理", "Index", "Membership")@*, new { area = "SecurityGuard" }, null, new { area = "SecurityGuard" }, null*@
            | @Html.ActionLink("创建用户", "CreateUser", "Membership")</p>
        <table>
            <tr>
                <td>
                    总用户数:
                </td>
                <td>@Model.TotalUserCount
                </td>
            </tr>
            <tr>
                <td>
                    在线用户:
                </td>
                <td>@Model.TotalUsersOnlineCount
                </td>
            </tr>
        </table>
    </fieldset>
</div>
<div class="fr w48pc">
    <fieldset>
        <legend>角色管理</legend>
        <p>@Html.ActionLink("角色管理", "Index", "Role")</p>
        <table>
            <tr>
                <td>
                    Total Roles:
                </td>
                <td>@Model.TotalRolesCount
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td>
                </td>
            </tr>
        </table>
    </fieldset>
</div>
