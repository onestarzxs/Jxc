@using Gms.Domain

@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}

<body>

    <div id="toolbar" style="padding: 5px; height: auto">
        <div style="margin-bottom: 5px">
            <a href="#" class="easyui-linkbutton" id="btnAdd" iconcls="icon-add" plain="true">添加</a>
            <a href="#" class="easyui-linkbutton" id="btnDelete" iconcls="icon-remove" plain="true">删除</a>
            <a href="#" class="easyui-linkbutton" id="btnEdit" iconcls="icon-edit" plain="true">修改</a>
            <a href="#" class="easyui-linkbutton reset" plain="true">重置密码</a>
        </div>
        <div>
            登录名：<input name="LoginName" class="messager-input" style="width: 80px" />
            电话：<input name="Mobile" class="messager-input" style="width: 80px" />
            <a href="#" id="user_search" class="easyui-linkbutton search" iconcls="icon-search">搜索</a>
        </div>
    </div>
     
    <table id="user_search_list" url="@Url.Action("List","User")" edit="@Url.Action("GetUser","User")" del="@Url.Action("Delete","User")">
            
    </table>
        
    <div id="user_search_edit" dlgtitle="职工信息" style="display: none">
        <div id="user_search_edit_content"></div>
@*        @{
            Html.RenderPartial("Edit",new User());
        }*@
    </div>
 
    
    @*记录选择的用户，便于其他页面调用*@
    <div style="display: none;">
        <input id="user_selected_Id" />
        <input id="user_selected_LoginName" />
    </div>   
        
</body>

<script type="text/javascript" src="@Url.Content("/Scripts/User/User.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        User.Init();
    });

</script>

@*</html>*@
