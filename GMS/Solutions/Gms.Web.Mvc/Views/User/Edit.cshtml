@model Gms.Domain.User

@{
    Layout = null;
}

<form id="userform" method="post" action="/User/CreateOrUpdate">

    <table>
        <tr>
            <td>登录名</td>
            <td>
 
                @Html.TextBoxFor(c => c.LoginName,new{@class="editdisabled"})
               
                <input id="Id" name="Id" style="display: none" type="number" value=""/>
            </td>
        </tr>

        <tr class="edithide">
            <td>密码</td>
            <td>
                <input name="psw" value=""/>
            </td>
        </tr>

        <tr>
            <td>真实姓名</td>
            <td>
   
                @Html.TextBoxFor(c => c.RealName)
        @*, new { id="cRealName"},required="*",message="eeeeeeeeeeee"*@
            </td>
        </tr>

        <tr>
            <td>昵称</td>
            <td>
                @Html.TextBoxFor(c=>c.NickName)
            </td>
        </tr>

        <tr>
            <td>性别</td>
            <td>
                @Html.DropDownListFor(c=>c.Gender)
            </td>
        </tr>

        <tr>
            <td>手机号码</td>
            <td>
                @Html.TextBoxFor(c=>c.Mobile)
            </td>
        </tr>

        <tr>
            <td>备注</td>
            <td>
                @Html.TextAreaFor(c=>c.Note)
            </td>
        </tr>

    </table>

 </form>