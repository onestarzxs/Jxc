@using Gms.Domain
@model Gms.Domain.Equipment

@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}

<body>

    <div id="toolbar" style="padding: 5px; height: auto">
        
        <div style="margin-bottom: 5px">
            <a href="#" class="easyui-linkbutton add" forgid="equi_search_list" iconcls="icon-add" plain="true">添加</a>
            @*<a href="#" class="easyui-linkbutton btnAdd" iconcls="icon-add" plain="true">添加</a>*@
            <a href="#" class="easyui-linkbutton del" forgid="equi_search_list" iconcls="icon-remove" plain="true">删除</a>
            <a href="#" class="easyui-linkbutton edit" forgid="equi_search_list" iconcls="icon-edit" plain="true">修改</a>
        </div>
        <div>
            物料类型：
            @Html.DropDownListForCommonCode(c=>c.EquiType,CommonCodeType.物料类型,"GlassTypeId","全部")

            名称：
            <input name="Name" class="messager-input" />
            
            数量：<input name="Quantity.Start" class="messager-input" style="width: 80px" />
            至<input name="Quantity.End" class="messager-input" style="width: 80px" />

            <a href="#" id="equi_search" class="easyui-linkbutton search" iconcls="icon-search">搜索</a>
        </div>
        
        
    </div>
     
    <table id="equi_search_list" url="@Url.Action("List","Equipment")" edit="@Url.Action("GetEquipment","Equipment")" del="@Url.Action("Delete","Equipment")">
            
    </table>
    
    <div id="equi_search_edit" dlgtitle="物料信息" style="display: none">
        @{
            Html.RenderPartial("Edit", new Equipment());
        }
    </div>
    
    @*记录选择的库存，便于其他页面调用*@
    <div style="display: none;">
        <input id="equi_selected_id" />
        <input id="equi_selected_type" />
        <input id="equi_selected_name" />
        <input id="equi_selected_model" />
        <input id="equi_selected_unit" />
        <input id="equi_selected_price" />
    </div>
        
        
</body>
<script type="text/javascript" src="@Url.Content("/Scripts/equi/equi.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Equipment.Init();
    });

</script>